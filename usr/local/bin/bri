#!/usr/bin/env bash 
if [ "$1" = "--up" ]; then
    swayosd-client --brightness raise
    # brightnessctl -q s 5%+
elif [ "$1" = "--down" ]; then
    swayosd-client --brightness lower
    # brightnessctl -q s 5%-
elif [ "$1" = "--get" ]; then
    echo $(brightnessctl | head -n 2 | tail -n 1 | awk '{print $4}' | tr -d '(%)')
fi
